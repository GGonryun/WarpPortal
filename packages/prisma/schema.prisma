generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  name           String
  shell          String
  local          String           @unique
  domain         String
  hash           Int
  UserAttributes UserAttributes[]
  Certificates   Certificate[]
}

enum PolicyAction {
  SUDO
  ALLOW
  DENY
}

model Policy {
  id          String       @id @default(cuid())
  source      String
  destination String
  action      PolicyAction
}

model Certificate {
  id          String    @id @default(cuid())
  fingerprint String    @unique
  serial      BigInt    @unique
  publicKey   String
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  revokedAt   DateTime?
  expiresAt   DateTime
  createdAt   DateTime
}

model UserAttributes {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  key    String
  value  String

  @@unique([userId, key])
}
